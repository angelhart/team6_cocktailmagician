@model AddressViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Address</h4>
<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Id" />

			<div class="form-group">
				<label asp-for="CountryName" class="control-label"></label>
				<text> @Model.CountryName
				</text>
			</div>
			<div class="form-group">
			</div>
			<div class="form-group">
				<label asp-for="CityName" class="control-label"></label>
				<select asp-for="CityId" class="form-control" asp-items="@(new SelectList(string.Empty, "Id", "Name"))">
					<option value="">--Select City--</option>
				</select>
				<span asp-validation-for="CityId" class="text-danger"></span>
				<a asp-controller="Addresses" asp-action="CreateCity">Add new City</a>
			</div>
			<div class="form-group">
				<label asp-for="Street" class="control-label"></label>
				<input asp-for="Street" class="form-control" />
				<span asp-validation-for="Street" class="text-danger"></span>
			</div>


		</form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
