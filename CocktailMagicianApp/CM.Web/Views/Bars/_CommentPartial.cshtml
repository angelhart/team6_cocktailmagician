@model BarCommentViewModel

<h4>Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Bars" 
              asp-action="AddCommentAsync"
              >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Text" class="control-label"></label>
                <input asp-for="BarId" value="@ViewData["BarId"]">
				<textarea asp-for="Text" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
				<span asp-validation-for="Text" class="text-danger"></span>
			</div>
            <div class="form-group">
                <input type="submit" value="Add Comment" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
