@model IEnumerable<BarIndexViewModel>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
	<link href="//cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" rel="stylesheet">
</head>

<h1>World's Best Bars</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>

<table class="table">
	<thead>
		<tr>
			<th>
				Image
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Country)
			</th>
			<th>
				Address
			</th>
			<th>
				@Html.DisplayNameFor(model => model.AverageRating)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					<a asp-action="Details" asp-route-id="@item.Id">
						<img src="@item.ImagePath" height="50" width="auto" />
					</a>
				</td>
				<td>
					<a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Country)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.City), @Html.DisplayFor(modelItem => item.Street)
				</td>
				<th>
					@Html.DisplayFor(modelItem => item.AverageRating)
				</th>

				@if (User.IsInRole("Magician"))
				{
					<td>
						<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					</td>
					<td>
						<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
					</td>
				}
			</tr>
		}
	</tbody>
</table>

<div>
	<a asp-action="Index">Back to List</a>
</div>


