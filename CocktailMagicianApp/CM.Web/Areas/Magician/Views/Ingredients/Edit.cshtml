@model CM.Web.Areas.Magician.Models.IngredientViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>@Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Ingredients" asp-area="Magician" id="__AjaxAntiForgeryForm" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ImagePath" />
                <img src="@Model.ImagePath" alt="@Model.Name" height="200" width="auto" />
            </div>
            <div class="form-group">
                <label class="control-label">Upload new image (optional)</label>
                <input id="fileUploadInput" asp-for="Image" type="file" class="file" accept="image/*" hidden>
                <div class="input-group my-3">
                    <input type="text" class="form-control col-sm-12" disabled placeholder="New Image" id="file">
                    <div class="input-group-append">
                        <button type="button" class="browse btn btn-primary">Browse</button>
                    </div>
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <img src="https://placehold.it/80x80" id="preview" class="img-thumbnail">
                </div>
            </div>
            <input type="submit" value="Save" class="btn btn-primary" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Ingredients" asp-area="Magician">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/UploadImage.js"></script>

}
