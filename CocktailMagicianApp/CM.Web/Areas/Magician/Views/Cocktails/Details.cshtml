<div class="rating-box">
    <br />
    <h3>Rate this bar:</h3>
    <form asp-controller="Cocktails"
          asp-action="AddRating"
          method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="rating">
            <span class="fa fa-star-o"></span>
            <span class="fa fa-star-o"></span>
            <span class="fa fa-star-o"></span>
            <span class="fa fa-star-o"></span>
            <span class="fa fa-star-o"></span>
        </div>
        <br />
        <br />
        <div class="form-group">
            <br />
            <input name="Score" type="number" hidden id="rating-value" value="rating-value" />
            <input name="CocktailId" asp-for="@Model.Id" />
            <input type="submit" value="Submit Rating" class="btn btn-primary">
        </div>
    </form>
</div>

<!-- Comments -->
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Comments)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)<br />
                </td>
            </tr>
        }
    </tbody>
</table>


<h4>Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-area="BarCrawler"
              asp-controller="Comments"
              asp-action="Create">
            @*method="post">*@

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label name="Text" class="control-label"></label>
                <input name="EntityId" value="@Model.Id">
                <textarea name="Text" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                <input type="submit" value="Add Comment" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
